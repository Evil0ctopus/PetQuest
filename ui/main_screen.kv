ScreenManager:
    MainScreen:

<MainScreen>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        Label:
            text: "Welcome to PetQuest!"
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]

        Button:
            text: "Start GPS"
            size_hint_y: None
            height: 50
            on_press: root.on_gps_button_press()
